@import "_ress";
@import "_base";

$color-main = #F2E4D5;
$color-base = #3A2B27;
$color-accent = #FF2428;
$color-text = $color-main;
$color-link = $color-accent;

html {
  overflow: hidden;
}

body {
  background: $color-base;
  color: $color-text;
}

a {
  color: $color-link;
}

h1, h2, h3, h4, h5, h6 {
  color: $color-accent;
}

img {
  max-width: 100%;
}

.clearfix {
  &::after {
    content: "";
    display: block;
    clear: both;
  }
}

main {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-image: repeating-linear-gradient(135deg, #ffee00, #ffee00 40px, #000000 40px, #000000 70px);
  background-size: 400% 400%;
  animation: gradientBG 15s ease infinite;
  .inner {
    background: #000000;
    height: calc(100% - 200px);
    width: calc(100% - 200px);
    margin: 100px;
    background: #000000;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 20px;
    span {
      text-align: center;
      font-family: serif;
      font-size: 5vw;
      color: $color-accent;
      animation: blink 1s ease infinite;
    }
  }
}

@keyframes gradientBG {
	0% { background-position: 0% 50%; }
	50% { background-position: 100% 50%; }
	100% { background-position: 0% 100%; }
}
@keyframes blink {
  0% { opacity: 0; }
  100% { opacity: 1; }
}
  